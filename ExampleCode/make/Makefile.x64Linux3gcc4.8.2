#   make -f make/Makefile.i86Linux2.6gcc4.4.5 DEBUG=1


# Defines required Make variables. They will be used in the Makefile.common
# to define the rules to define the build process for this application.
ARCH=armv6vfphLinux3.xgcc4.7.2

CXX = arm-linux-gnueabihf-g++
CXXFLAGS = -std=c++11
WX_FLAGS = 
CXXLD = arm-linux-gnueabihf-g++
CXXLDFLAGS = -std=c++11 -static-libgcc
SYSLIBS = -ldl -lnsl -lm -lpthread -lrt
DEFINES = -fpic -DRTI_UNIX -DRTI_LINUX -march=armv7-a -mfpu=vfp -mfloat-abi=hard -mlong-calls 

# The rest of the rules are in the 'Makefile.common'
include make/Makefile.common

